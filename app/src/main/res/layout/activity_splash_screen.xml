<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color_day_night"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.fulcrumy.pdfeditor.activities.SplashScreenActivity">

    <ImageView
        android:id="@+id/appIconSplash"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:background="@drawable/pdf"
        android:backgroundTint="@color/tint_color"
        app:tint="@color/tint_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/splashLoader"
            android:layout_width="90dp"
            android:layout_height="60dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_fileName="loader.json" />

        <TextView
            android:id="@+id/appNameSplash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/appName"
            android:textColor="@color/text_color"
            android:textSize="30sp"
            android:layout_marginBottom="20sp"/>

    </LinearLayout>


</RelativeLayout>